<%= content_tag "div", id: "downvote-#{answer.id}" do %>
  <%= link_to downvote_answer_path(answer.id), method: :patch, remote: true, data: { disable_with: "voting..." } do %>
    <% if current_user.voted_down_on? answer %>
      <i class="fa fa-chevron-down" style="color: red;"></i>
    <% else %>
      <i class="fa fa-chevron-down"></i>
    <% end %>
  <% end %>
<% end %>
