<%- model_class = Question -%>
  <h1><%=t '.title'%></h1>
<ul>
    <% @questions.each do |question| %>
          <a href="<%=question_path(question) %>">
            <h3><%=  question.title %></h3>
          </a>

          <%= question.content %>
          <hr>
          Post <%= time_ago_in_words(question.created_at) %> ago


  <% end %>
</ul>

